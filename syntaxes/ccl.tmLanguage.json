{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ANSYS CCL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions_math"
		},
		{
			"include": "#functions_operators"
		},
		{
			"include": "#physical_constants"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.ccl",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.ccl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ccl",
					"match": "\\\\."
				}
			]
		},
		"functions_math": {
			"patterns": [
				{
					"name": "support.function.math",
					"match": "(abs|sin|cos|asin|acos|tan|atan|if|atans2|besselJ|besselY|cosh|exp|int|loge|log10|min|max|mod|nint|sinh|sqrt|step|tanh|*|-|+|^)"
				}
			]
		},
		"functions_operators": {
			"patterns": [
				{
					"name": "support.function.operator",
					"match": "(area|area_x|area_y|area_z|areaAve|areaAve_x|areaAve_y|areaAve_z|areaInt|areaInt_x|areaInt_y|areaInt_z|ave|count|countTrue|force|forceNorm|force_x|force_y|force_z|inside|length|lengthAve|lengthInt|mass|massAve|masssFlow|massFlowAve|massFlowAveAbs|massFlowInt|massInt|maxVal|minVal|probe|rbstate|rmsAve|sum|torque|torque_x|torque_y|torque_z|volume|volumeAve|volumeInt|probe)"
				}
			]
		},
		"physical_constants": {
			"patterns": [
				{
					"name": "support.constant",
					"match": "(avogadro|boltzmann|clight|e|echarge|spspermo|g|mupermo|pi|plank|stegan)"
				}
			]
		}
	},
	"scopeName": "text.ccl"
}